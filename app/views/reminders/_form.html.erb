<%= form_with model: reminder do |form| %>
  <div>
    <div class="my-4">
      <%= form.label :url, "URL" %>
      <%= form.text_field :url %>
    </div>
    <div class="my-2">
      <%= form.label :page_number, "Page Number" %>
      <%= form.text_field :page_number %>
    </div>
    <% reminder.errors.full_messages_for(:url).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <button class="text-green-600"><%= form.submit "Create Reminder" %></button>
  </div>
<% end %>